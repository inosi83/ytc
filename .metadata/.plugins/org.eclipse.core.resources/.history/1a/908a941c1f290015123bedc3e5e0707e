package org.comstudy21.ex01;

public class Ex04 {

	public static void main(String[] args) {
		
		int[] arr = new int[]{60, 90, 80, 70, 100};
		int max = 0, min = 0;
		int size = arr.length;
		//arr 배열에서 가장 큰 값은 max에 가장 작은 값은 min대입
		//for 문을 이용해서 구현하라.
		for(int i=0; i<size; i++){
			for(int j=0; j<size; j++){
				if(arr[i] > arr[j]){
					max = arr[i];
				}else if(max<arr[j]){
					max = arr[j];
				}else if(arr[i]<arr[j]){
					min = arr[i];
				}else if(min > arr[i]){
					min = arr[i];
				}
			}
		}
		System.out.println("max : " + max);
		System.out.print("min : " + min);
	}
}
