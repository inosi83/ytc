
public class Ex04 {
    public static void main(String[] args){

        for(int a =0; a<5; a ++){
            for(int b=0; b<5-a; b++){
                System. out.print("*");
            } 
            for(int c=0; c<2*a-1;c++){
            	System.out.print("@");
            }
            for(int d=0; d<5-a;d++){
            	System.out.print("*");
            }
           System. out.println();
        } //for
        for(int a =5; a>1; a--){
            for(int b=0; b<6-a; b++){
                System. out.print("*");
            } 
            for(int c=0; c<2*a-1;c++){
            	System.out.print("@");
            }
            for(int d=0; d<6-a;d++){
            	System.out.print("*");
            }
            System.out.println();
        }
  }//main


}
