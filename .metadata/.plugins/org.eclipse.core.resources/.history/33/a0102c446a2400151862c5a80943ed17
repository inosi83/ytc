package org.comstudy.ex03;

import java.util.Scanner;

public class Ex08 {

	public static void main(String[] args){
		//switch ~case 문을 이용해서 월의 총 날짜를 출력하는 프로그램.
		//월 입력: 2
		//2월 28일까지 있다.
		Scanner scan = new Scanner(System.in);
		
		int a = 0;
		String b = "12월은 31일까지 있다.";
		
		System.out.print("월 입력: ");
		a = scan.nextInt();
		
		switch(a++){
		case 1: b = "1월은 31일까지 있다."; break;
		case 2: b = "2월은 31일까지 있다."; break;
		case 3: b = "3월은 31일까지 있다."; break;
		case 4: b = "4월은 31일까지 있다."; break;
		case 5: b = "5월은 31일까지 있다."; break;
		case 6: b = "6월은 31일까지 있다."; break;
		case 7: b = "7월은 31일까지 있다."; break;
		case 8: b = "8월은 31일까지 있다."; break;
		case 9: b = "9월은 31일까지 있다."; break;
		case 10: b = "10월은 31일까지 있다."; break;
		case 11: b = "11월은 31일까지 있다."; break;
		default: b = "12월은 31일까지 있다."; 
		}
		
	}
}
