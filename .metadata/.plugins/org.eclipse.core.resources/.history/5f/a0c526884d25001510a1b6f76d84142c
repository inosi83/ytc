
public class Ex04 {
    public static void main(String[] args){
    	final int max= 5;
        for(int a =0; a<max; a ++){
            for(int b=0; b<max-a; b++){
                System. out.print("*");
            } //for in for
            for(int c=0; c<2*a-1;c++){
            	System.out.print("@");
            }
            for(int d=0; d<max-a;d++){
            	System.out.print("*");
            }
           System. out.println();
        } //for
        for(int a =1; a<max-a; a++){
            for(int b=0; b<max-a; b++){
                System. out.print("*");
            } //for in for
            for(int c=0; c<2*a-1;c++){
            	System.out.print("@");
            }
            for(int d=0; d<max-a;d++){
            	System.out.print("*");
            }
            System.out.println();
        }
  }//main


}
